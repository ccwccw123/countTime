    <!--倒计时控件属性-->
    <declare-styleable name="TextViewTimer4">
        <attr name="time_background" format="color" />
        <!--冒号色值-->
        <attr name="colon_color" format="color" />
        <attr name="time_size" format="dimension" />
        <attr name="time_color" format="color" />
        <!--倒计时背景长度-->
        <attr name="background_width" format="dimension" />
        <!--倒计时背景宽度-->
        <attr name="background_height" format="dimension" />
        <!-- 圆角 -->
        <attr name="radius" format="dimension" />
        <attr name="forbidDrawDay" format="boolean" />
        <!--符号或者空隙宽度-->
        <attr name="sep_width" format="dimension" />
        <!--倒计时背景类型-->
        <attr name="time_background_type" format="enum">
            <!--圆-->
            <enum name="circle" value="10" />
            <!--圆角矩形-->
            <enum name="roundCircle" value="11" />
            <!--圆角矩形-->
            <enum name="custom" value="12" />
        </attr>
        <!--是否计算天数,true:是-->
        <attr name="calculate_day" format="boolean" />
        <attr name="custom_background" format="reference|integer" />
    </declare-styleable>

